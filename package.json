{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "keywords": [
    "react",
    "signature_pad",
    "digital-signature",
    "digital signature"
  ],
  "dependencies": {
    "signature_pad": "^4.1.4"
  },
  "peerDependencies": {
    "react": "17 - 18",
    "react-dom": "17 - 18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-digital-signature",
  "author": "Bastian Perez",
  "module": "dist/react-digital-signature.esm.js",
  "size-limit": [
    {
      "path": "dist/react-digital-signature.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-digital-signature.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
