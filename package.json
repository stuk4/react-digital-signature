{
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "description": "A simple digital signature pad",
  "types": "index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "jest ",
    "test:watch": "jest --watchAll",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stuk4/react-digital-signature"
  },
  "keywords": [
    "react",
    "signature_pad",
    "signature",
    "digital-signature",
    "digital_signature"
  ],
  "dependencies": {
    "signature_pad": "^4.1.4"
  },
  "peerDependencies": {
    "react": "17 - 18",
    "react-dom": "17 - 18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-digital-signature",
  "author": "Bastian Perez",
  "module": "dist/react-digital-signature.esm.js",
  "size-limit": [
    {
      "path": "dist/react-digital-signature.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-digital-signature.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "@types/react-test-renderer": "^18.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "size-limit": "^8.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
